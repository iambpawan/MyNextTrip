<% layout("/layouts/bolierplate"); %>
<body>
  <h3>All Listings</h3>
  <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
      </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2">
    <% for (let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="Card-a">
      <div class="card">
        <img
          class="card-img-top"
          src="<%= listing.image %>"
          alt="Card image cap"
          style="height: 18rem"
        />
        <div class="card-body">
          <p class="card-text">
            <%= listing.title %> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
          </p>
        </div>
      </div>
      <% } %>
    </a>
  </div>
</body>
